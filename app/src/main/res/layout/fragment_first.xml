<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0CDC1"
    tools:context=".screens.FirstFragment"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_marginTop="520dp"
            android:text="Добавить"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.891"
            app:textAllCaps="false"
            android:background="@drawable/round_button"
            android:textSize="18sp"
            app:backgroundTint="#D05021"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.994"
            android:layout_marginBottom="5dp"
            android:background="@drawable/linearlayout_border">

            <Button
                android:id="@+id/btnList"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="К истории"
                app:textAllCaps="false"
                android:layout_marginLeft="20dp"
                android:background="@drawable/round_button"
                app:backgroundTint="#BD3127"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <Button
                android:id="@+id/btnStat"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Статистика"
                app:textAllCaps="false"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/round_button"
                app:backgroundTint="#BD3127"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnPrice"
            android:layout_width="400dp"
            android:layout_height="35dp"
            android:layout_marginTop="4dp"
            android:text="Ответственные за обслуживание"
            android:background="@drawable/round_button"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:backgroundTint="#D05021"
            app:textAllCaps="false"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnPrice"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="ФИО:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editTextFIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="ФИО"
                android:maxLength="45"
                android:textColor="#DB3127"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Дата начала\nпользования:"
                android:textColor="#DB3127"
                android:textSize="18dp"
                android:layout_marginRight="23dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="#D05021"/>

            <EditText
                android:id="@+id/editTextTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Дата начала"
                android:maxLength="45"
                android:textColor="#DB3127"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Дата окончания\nпользования:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editTextTimeFinish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Дата окончания"
                android:maxLength="45"
                android:textColor="#DB3127"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="43dp"
                android:text="Ваш номер\nтелефона:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editTextPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Номер телефона"
                android:maxLength="11"
                android:textColor="#DB3127"
                android:textSize="20dp"
                android:digits="123456789"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:text="Введите данные о изделии:"
                android:textColor="#DB3127"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:background="@drawable/linearlayout_border"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/btnAdd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="5dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наименовение изделия:"
                android:textColor="#DB3127"
                android:layout_marginTop="5dp"/>


            <EditText
                android:id="@+id/editTextProduct"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Наименование изделия"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:textSize="15dp"
                android:textColor="#DB3127"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#D05021"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество затраченной фанеры 0.25 м^2:"
                android:textColor="#DB3127"
                android:layout_marginTop="5dp"/>

            <EditText
                android:id="@+id/editTextCount"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="Количество затраченной фанеры"
                android:gravity="center"
                android:textSize="15dp"
                android:digits="0123456789"
                android:inputType="number"
                android:textColor="#DB3127"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#D05021"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Материал"
                android:textColor="#DB3127"
                android:layout_marginTop="5dp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textColor="#DB3127"
                android:gravity="center"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</ScrollView>