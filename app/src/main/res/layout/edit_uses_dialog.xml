<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="502dp"
    android:id="@+id/edit_uses"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="ФИО:"
                android:textColor="#DB3127"
                android:textSize="20dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editUsesFIO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="ФИО"
                android:maxLength="45"
                android:textColor="#DB3127"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="23dp"
                android:text="Дата начала\nпользования:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editUsesTimeStart"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:gravity="top"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Дата"
                android:maxLength="45"
                android:textColor="#DB3127"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="23dp"
                android:text="Дата окончания\nпользования:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-12dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editUsesTimeFinish"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:gravity="top"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:hint="Дата"
                android:maxLength="45"
                android:textColor="#DB3127"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="23dp"
                android:text="Номер\nтелефона:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editUsesPhone"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:digits="0123456789"
                android:ems="10"
                android:inputType="number"
                android:hint="Номер"
                android:maxLength="11"
                android:textColor="#DB3127"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="23dp"
                android:text="Наименование \nизделия"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-6dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editTextProduct"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Наименование"
                android:inputType="textMultiLine"
                android:textColor="#DB3127"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="23dp"
                android:text="Фанеры \nзатрачено:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:background="#D05021" />

            <EditText
                android:id="@+id/editTextCount"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:hint="Количество"
                android:textColor="#DB3127"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="320dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/linearlayout_border"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="23dp"
                android:text="Материал:"
                android:textColor="#DB3127"
                android:textSize="18dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="36dp"
                android:background="#D05021" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="160dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#DB3127" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="#D05021"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>